      nexus.vm.hostname = "nexus"
      nexus.vm.network "private_network", ip: "192.168.56.14"
      nexus.vm.provider "virtualbox" do |vb|
       vb.memory = "2040"
      end
    # nexus.vm.provision "shell", path: "memcache.sh"  
    end
    
  
